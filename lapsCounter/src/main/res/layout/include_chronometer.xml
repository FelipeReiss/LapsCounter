<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_chronometer"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <br.com.helpdev.chronometerlib.widget.ChronometerWidget
        android:id="@+id/chronometerWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/size_text_chronometer" />

    <LinearLayout
        android:id="@+id/layout_chronometer_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/paused_time"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <br.com.helpdev.chronometerlib.widget.ChronometerWidget
            android:id="@+id/chronometerWidgetPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/size_text_chronometer_pause" />
    </LinearLayout>

</LinearLayout>
